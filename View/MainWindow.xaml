<Window x:Class="EM2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EM2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu Background="White">
                <MenuItem Name="MIWindows" Header="Windows"
                          Foreground="Black" MouseEnter="MI_MouseEnter"
                          MouseLeave="MI_MouseLeave">
                    <MenuItem Name="MIRegisters" Header="Registers"
                              Foreground="Black"
                              MouseEnter="MI_MouseEnter"
                              MouseLeave="MI_MouseLeave"/>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="TBInput" TextWrapping="Wrap" AcceptsReturn="True" KeyDown="TBInput_KeyDown"/>
        </Grid>
    </Grid>
</Window>
