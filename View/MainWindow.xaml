<Window x:Class="EM2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EM2"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="#27282a"
        Title="EM2" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="MenuItemStyle">
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.Background" Value="#27282a"/>
            <Setter Property="Control.Margin" Value="2"/>
            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
            <Setter Property="Control.FontSize" Value="15"/>
        </Style>
        <Style x:Key="ImplMenuItemStyle">
            <Setter Property="Control.Foreground" Value="Black"/>
            <Setter Property="Control.Background" Value="#f0f0f0"/>
            <Setter Property="Control.Margin" Value="2"/>
            <Setter Property="Control.HorizontalAlignment" Value="Left"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
            <Setter Property="Control.FontSize" Value="15"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <DockPanel Background="#27282a">
                <Menu Background="#27282a">
                    <MenuItem Name="MIFile" Header="File"
                              Style="{StaticResource MenuItemStyle}">
                        <MenuItem Name="MIOpen" Header="Open" Click="MIOpen_OnClick"
                                  Style="{StaticResource ImplMenuItemStyle}"/>
                        <MenuItem Name="MISave" Header="Save"
                                  Style="{StaticResource ImplMenuItemStyle}"/>
                        <Separator BorderBrush="Black"/>
                        <MenuItem Name="MIExit" Header="Exit" Click="MIExit_OnClick"
                                  Style="{StaticResource ImplMenuItemStyle}"/>
                    </MenuItem>
                    <MenuItem Name="MIWindows" Header="Windows"
                              Style="{StaticResource MenuItemStyle}">
                        <MenuItem Name="MIRegisters" Header="Registers"
                                  Style="{StaticResource ImplMenuItemStyle}"/>
                    </MenuItem>
                    <MenuItem Name="MIDebugging" Header="Debugging"
                              Style="{StaticResource MenuItemStyle}">
                        <MenuItem Name="MIStart" Header="Start"
                                  Style="{StaticResource ImplMenuItemStyle}"/>
                        <MenuItem Name="MIDebug" Header="Debug"
                                  Style="{StaticResource ImplMenuItemStyle}"/>
                        <MenuItem Name="MIReload" Header="Reload"
                                  Style="{StaticResource ImplMenuItemStyle}"/>
                    </MenuItem>
                </Menu>
            </DockPanel>
            
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Name="SPIndex">
                <TextBlock Text="1" FontSize="15"
                           Padding="8,5,0,0" Foreground="White"/>
            </StackPanel>
            
            <TextBox Name="TBInput" TextWrapping="Wrap" Grid.Column="1" 
                     AcceptsReturn="True" KeyDown="TBInput_KeyDown"
                     BorderBrush="Black" Margin="5"
                     Background="#141414" FontSize="15"
                     Foreground="White"
                     MouseEnter="TBInput_MouseEnter"
                     KeyUp="TBInput_KeyUp"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" Name="TBInfo"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="25" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
